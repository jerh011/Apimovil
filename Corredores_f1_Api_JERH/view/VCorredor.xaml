<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Corredores_f1_Api_JERH.view.VCorredor">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Inventario" HorizontalTextAlignment="Center" TextColor="White"/>
            </Frame>
            <Label Text="Registrar invetario" FontSize="Title" Padding="30,10,30,10"/>
            <Entry Placeholder="Nombre corredor" Text="{Binding Name}"/>
            <Entry Placeholder="Number" Text="{Binding Numero}"/>
            <Entry Placeholder="Equpo" Text="{Binding Equipo}"/>
            <Button Text="Registrar" Command ="{Binding Registrarcommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>